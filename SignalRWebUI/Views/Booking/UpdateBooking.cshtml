@model UpdateBookingDto
@{
	ViewData["Title"] = "UpdateBooking";
	Layout = "~/Views/AdminLayoutController/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girişi</div>
						</div>
						<input type="hidden" asp-for="BookingId" />
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Ad Soyad Giriniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon</label>
								<input type="tel" class="form-control" asp-for="Phone" id="Phone" pattern="^\+90\d{10}$"
									   placeholder="+905551112233">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">E-Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="ornek@example.com">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount">Kişi Sayısı</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="PersonCount" placeholder="Kişi Sayısı Giriniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date">Rezervasyon Tarihi</label>
								<input type="date" class="form-control" asp-for="Date" id="Date" placeholder="">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Rezervasyon Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

