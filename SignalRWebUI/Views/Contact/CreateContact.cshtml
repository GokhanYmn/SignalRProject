@model CreateContactDto
@{
	ViewData["Title"] = "CreateContact";
	Layout = "~/Views/AdminLayoutController/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Yazısı Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyonu Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="Location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numaranızı Giriniz</label>
								<input type="tel" class="form-control" asp-for="Phone" id="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail Adresini Giriniz</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterDescripton">Açıklamayı Giriniz</label>
								<textarea class="form-control" asp-for="FooterDescripton" id="FooterDescripton"> </textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgisi Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

